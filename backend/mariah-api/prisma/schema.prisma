generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payments {
  id         Int      @id @default(autoincrement())
  method     String
  cardMethod String   @map("card_method")
  createdAt  DateTime @default(now()) @map("created_at")

  Sales Sales[]
}

model Sales {
  id         Int      @id @default(autoincrement())
  quantity   Int
  discont    Float
  totalPrice Float    @map("total_price")
  salesPrice Float    @map("sales_price")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  Product    Products[]
  Payments   Payments?  @relation(fields: [paymentsId], references: [id])
  paymentsId Int?
}

model Products {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String?
  stock       Int
  salesId     Int?     @map("sales_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  Sales Sales? @relation(fields: [salesId], references: [id])

  @@map("products")
}
