generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payments {
  id          Int      @id @default(autoincrement())
  method      String?
  installment String?
  createdAt   DateTime @default(now()) @map("created_at")
  Sales       Sales?   @relation(fields: [salesId], references: [id])
  salesId     Int?

  @@map("payments")
}

